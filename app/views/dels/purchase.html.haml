= render "layouts/devise-header"
.job-detail-middle
  .job-box
    = form_with model: @review, url: job_request_del_reviews_path(@job, @request, @del), method: :post, local: true do |f|
      %ul.job-contents
        .jobs-list
          %li 評価
          = f.select "review[star]" do
            %option{value: 1} 1
            %option{value: 2} 2
            %option{value: 3} 3
            %option{value: 4} 4
            %option{value: 5} 5
          %li 何かあればご記入下さい
          = f.text_area :text , name: "review[text]"
        = f.submit "レビュー送信"
= render "layouts/footer"
